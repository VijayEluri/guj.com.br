<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<listener>
		<listener-class>beanface.el.functor.InstallFunctorListener</listener-class>
	</listener>

  	<listener>
	    <listener-class>net.jforum.ForumSessionListener</listener-class>
  	</listener>
	
	<context-param>
    	<param-name>org.mortbay.jetty.servlet.SessionURL</param-name>
    	<param-value>none</param-value>
  	</context-param>
    
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>pt_BR</param-value>
	</context-param>
	
	<filter>
    	<filter-name>clickstream-jforum</filter-name>
    	<filter-class>net.jforum.util.legacy.clickstream.ClickstreamFilter</filter-class>
  	</filter>

  	<filter-mapping>
    	<filter-name>clickstream-jforum</filter-name>
    	<url-pattern>*.java</url-pattern>
  	</filter-mapping>
	
	<filter>
		<filter-name>GUJ2_UrlRewriteFilter</filter-name>
		<filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
		
		<init-param>
			<param-name>statusEnabled</param-name>
			<param-value>false</param-value>
		</init-param>
		
	</filter>
	
	<filter-mapping>
		<filter-name>GUJ2_UrlRewriteFilter</filter-name>
		<url-pattern>*.guj</url-pattern>
	</filter-mapping>
	<context-param>
        <param-name>br.com.caelum.vraptor.packages</param-name>
        <param-value>br.com.caelum.guj</param-value>
    </context-param>
    <context-param>
		<param-name>br.com.caelum.vraptor.provider</param-name>
		<param-value>br.com.caelum.guj.vraptor.CustomProvider</param-value>
	</context-param>
	<filter>
		<filter-name>vraptor</filter-name>
		<filter-class>br.com.caelum.guj.vraptor.VRaptorFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>vraptor</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<servlet>
    	<servlet-name>jforum</servlet-name>
    	<servlet-class>net.jforum.JForum</servlet-class>
    	
		<!--
    	<load-on-startup>0</load-on-startup>
		-->
		
    	<init-param>
      		<param-name>development</param-name>
      		<param-value>true</param-value>
    	</init-param>
  	</servlet>

  	<servlet-mapping>
    	<servlet-name>jforum</servlet-name>
    	<url-pattern>*.java</url-pattern>
  	</servlet-mapping>

    <session-config>
    	<session-timeout>10</session-timeout>
    </session-config>
    
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>