<ehcache>
    <diskStore path="java.io.tmpdir"/>

	<!-- Post -->
	<cache name="br.com.guj.model.Post"
		maxElementsInMemory="100"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Blog -->
	<cache name="br.com.guj.model.Blog"
		maxElementsInMemory="100"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Article -->
	<cache name="br.com.guj.model.Article"
		maxElementsInMemory="300"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Category -->
	<cache name="br.com.guj.model.Category"
		maxElementsInMemory="300"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Home Posts -->
	<cache name="homePosts"
		maxElementsInMemory="100"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Home Posts -->
	<cache name="homeArticles"
		maxElementsInMemory="100"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Articles -->
	<cache name="br.com.guj.model.Category.articles"
		maxElementsInMemory="300"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Categories -->
	<cache name="Categories"
		maxElementsInMemory="300"
		eternal="true"
		overflowToDisk="false"/>
		
	<!-- Query Cache -->
	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="200"
		eternal="false"
		timeToIdleSeconds="3600"
		timeToLiveSeconds="18000"
		overflowToDisk="true"/>
		
	<!-- Timestamp Cache -->
	<cache name="org.hibernate.cache.UpdateTimestampsCache"
		maxElementsInMemory="10000"
		timeToIdleSeconds="3601"
		timeToLiveSeconds="18001"
		eternal="true"
		overflowToDisk="true"/>
		
    <!--Default Cache configuration. These will applied to caches programmatically created through the CacheManager -->
	<defaultCache
		maxElementsInMemory="2000"
		eternal="false"
		timeToIdleSeconds="1200"
		timeToLiveSeconds="3600"
		overflowToDisk="true"/>
</ehcache>
